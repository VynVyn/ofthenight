{% extends 'base.html.twig' %}

{% block title %}Index of the Night!{% endblock %}

{% block body %}

<div class="container-fluid bg-dark text-white">
    {% if app.user %}
    <div class="container">
        <div class="mt-3">
            <h1>Hello {{ app.user.username }}! Welcome in those parts of the Night...</h1>
            <a href="{{ path('app_logout') }}">Logout</a>
            <h2>Movie of the day is {{ movie.title }} ({{ release_date }})!</h2>
            <img src={{ poster }} style="width: 200px;">
        </div>             
    </div> 
    {% endif %}

    {% if not app.user %}
    <div class="container">
        <div class="mt-3">
            <h2>Already part of the Night? Please <a href="{{ path('app_login') }}">login</a>!</h2>
            <h2>New here? Please <a href="{{ path('registration') }}">register</a>!</h2>
        </div>             
    </div> 
    {% endif %}
</div>

{% endblock %}
